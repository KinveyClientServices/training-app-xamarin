<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		xmlns:local="clr-namespace:TrainingAppXamarin"
		x:Class="TrainingAppXamarin.MainPage"
		Padding="0,20,0,0">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Logout" Clicked="OnLogoutButtonClicked"/>
		<ToolbarItem Text="Pull" Clicked="OnPullClicked"/>
	</ContentPage.ToolbarItems>
	<ContentPage.Content>
		<StackLayout>
			<Label Text="{Binding TextTest}"
				VerticalOptions="Center"
				HorizontalTextAlignment="Center"
				Rotation="0"
				IsVisible="true"
				FontSize="Large"
				FontAttributes="Bold"
				TextColor="#D74F24" />
            <ListView x:Name="ProductView"
					ItemsSource="{Binding Products}">
			    <ListView.ItemTemplate>
			      <DataTemplate>
			        <TextCell Text="{Binding Name}" />
			      </DataTemplate>
			    </ListView.ItemTemplate>
			</ListView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>

